<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Default -->
    <style name="KaalTheme.TextStyle">
        <item name="android:letterSpacing">0.25</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="KaalTheme.TextStyle.Headline1">
        <item name="android:letterSpacing">-1.5</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">96sp</item>
    </style>

    <style name="KaalTheme.TextStyle.Headline2">
        <item name="android:letterSpacing">-0.5</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="KaalTheme.TextStyle.Headline3">
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="KaalTheme.TextStyle.Headline4">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="KaalTheme.TextStyle.Headline5">
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="KaalTheme.TextStyle.Headline6">
        <item name="android:letterSpacing">0.15</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="KaalTheme.TextStyle.Subtitle1">
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="KaalTheme.TextStyle.Subtitle2">
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="KaalTheme.TextStyle.Body1">
        <item name="android:letterSpacing">0.5</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="KaalTheme.TextStyle.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="KaalTheme.TextStyle.Button">
        <item name="android:letterSpacing">1.25</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="KaalTheme.TextStyle.Caption">
        <item name="android:letterSpacing">0.4</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="KaalTheme.TextStyle.Overline">
        <item name="android:letterSpacing">1.5</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
