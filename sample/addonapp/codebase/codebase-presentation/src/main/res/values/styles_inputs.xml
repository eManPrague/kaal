        <item name="android:textColorHighlight">@color/text_tint</item>
        <item name="android:textColorHint">@color/text_tint</item>
    </style>

    <style name="KaalSampleTheme.TextAppearance.EditTextHint">
        <item name="android:fontFamily">@font/roboto_regular</item>
