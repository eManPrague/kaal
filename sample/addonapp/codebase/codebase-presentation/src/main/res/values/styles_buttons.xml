<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KaalSampleTheme.Widget.Button">
        <item name="android:textAppearance">@style/KaalSampleTheme.TextAppearance.Button</item>
        <item name="android:minWidth">@dimen/buttonMediumMinWidth</item>
        <item name="android:elevation">2dp</item>
        <item name="android:minHeight">@dimen/buttonHeight</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="KaalSampleTheme.Widget.Button.Primary">
        <item name="android:background">@drawable/selector_primary_button</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/text_button_primary</item>
    </style>

    <style name="KaalSampleTheme.Widget.Button.Primary.Large">
        <item name="android:minHeight">@dimen/buttonHeightLarge</item>
    </style>

    <style name="KaalSampleTheme.Widget.Button.Secondary">
        <item name="android:background">@drawable/selector_secondary_button</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/text_button_secondary</item>
    </style>

    <style name="KaalSampleTheme.Widget.Button.White">
        <item name="android:background">@drawable/selector_white_button</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/text_button_secondary</item>
    </style>

    <style name="KaalSampleTheme.Widget.Button.White.Large">
        <item name="android:minHeight">@dimen/buttonHeightLarge</item>
    </style>

    <style name="KaalSampleTheme.Widget.Button.Secondary.Large">
        <item name="android:minHeight">@dimen/buttonHeightLarge</item>
    </style>

    <style name="KaalSampleTheme.TextAppearance.Button" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="KaalSampleTheme.Widget.Button.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/button_dialog_blue</item>
    </style>

</resources>
